<div class="container">
<h5>ジャンル一覧・追加</h5>
<div>ジャンル新規登録</div>
<div><%= form_with model: @genre, url: admin_genres_path do |f| %>
ジャンル名：<%= f.text_field :genre_name %>
<%= f.submit "新規登録" %><% end %></div>

<div>ジャンル</div>
<div><% @genres.each do |genre| %>
<div><%= genre.genre_name %><%= link_to "変更", edit_admin_genre_path(genre.id) %></div>
<% end %></div>

</div>