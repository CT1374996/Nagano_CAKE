<div class="container">
<h3>注文履歴一覧</h3>
<table class="table">
  <tr>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
  </tr>
  <% @orders.each do |order| %>
  <tr>
    <td><%= link_to admin_order_detail_path(order.id) do %><%= order.created_at.strftime('%Y/%m/%d') %><% end %></td>
    <td><%= order.receiver_name %></td>
    <% order.order_details.each do |order_detail| %>
      <% @amount += order_detail.amount %>
    <% end %>
    <td>
      <%= @amount %>
      <% @amount = 0 %>
    </td>
  </tr>
  <% end %>
</table>
</div>
