<h3>注文履歴一覧</h3>
<table>
  <tr>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
  </tr>
  <% @order_details.each do |order_detail| %>
  <tr>
    <td><%= link_to admin_order_detail_path(order_detail.id) do %><%= order_detail.created_at.strftime('%Y/%m/%d') %><% end %></td>
    <td><%= order_detail.order.receiver_name %></td>
    <td><%= order_detail.amount %></td>
  </tr>
  <% end %>
</table>
