<h3>注文履歴詳細</h3>

<table>
  <tr>
    <td>購入者</td>
    <td></td>
  </tr>
  <tr>
    <td>注文日</td>
    <td><%= @order_detail.order.created_at.strftime('%Y/%m/%d') %></td>
  </tr>
  <tr>
    <td>配送先</td>
    <td>〒<%= @order_detail.order.receiver_postal_code %><%= @order_detail.order.receiver_address %><br><%= @order_detail.order.receiver_name %></td>
  </tr>
  <tr>
    <td>支払方法</td>
    <td><%= @order_detail.order.payment_method %></td>
  </tr>
</table>

<table>
  <tr>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
  </tr>
  <% @order_detail.order.each do |order| %>
  <tr>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
  </tr>
  <% end %>
</table>

<table>
  <tr>
    <td>商品合計</td>
    <td><%= @order_detail.order.monetary_amount - @order_detail.order.shipping_fee %></td>
  </tr>
  <tr>
    <td>送料</td>
    <td><%= @order_detail.order.shipping_fee %></td>
  </tr>
  <tr>
    <td>請求金額合計</td>
    <td><%= @order_detail.order.monetary_amount %></td>
  </tr>
</table>