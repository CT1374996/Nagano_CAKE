<div class="container">
<h3>注文履歴詳細</h3>

<table class="table">
  <tr>
    <td>購入者</td>
    <td></td>
  </tr>
  <tr>
    <td>注文日</td>
    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
  </tr>
  <tr>
    <td>配送先</td>
    <td>〒<%= @order.receiver_postal_code %><%= @order.receiver_address %><br><%= @order.receiver_name %></td>
  </tr>
  <tr>
    <td>支払方法</td>
    <td><%= @order.payment_method %></td>
  </tr>
</table>

<table class="table">
  <tr>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
  </tr>
    <% @order.order_details.each do |order_detail| %>
  <tr>
    <td><%= order_detail.item.name %></td>
    <td><%= order_detail.tax_included_price %></td>
    <td><%= order_detail.amount %></td>
    <td><%= order_detail.tax_included_price.to_i * order_detail.amount.to_i %></td>
  </tr>
  <% end %>
</table>
<div class="row">
<table class="table">
  <tr>
    <td>商品合計</td>
    <td><%= @order.monetary_amount - @order.shipping_fee %></td>
  </tr>
  <tr>
    <td>送料</td>
    <td><%= @order.shipping_fee %></td>
  </tr>
  <tr>
    <td>請求金額合計</td>
    <td><%= @order.monetary_amount %></td>
  </tr>
</table>
</div>
</div>