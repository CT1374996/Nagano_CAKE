<div class="container">
<h3><%= @customer.last_name %><%= @customer.first_name %>の会員情報編集</h3>

<%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
<table class="table">
<tr>
    <td>会員ID</td>
    <td><%= @customer.id %></td>
  </tr>
  <tr>
    <td>氏名</td>
    <td>姓<%= f.text_field :last_name, autofocus: true %></td>
    <td>名<%= f.text_field :first_name, autofocus: true %></td>
  </tr>
  <tr>
    <td>カナ</td>
    <td>姓カナ<%= f.text_field :last_name_kana, autofocus: true %></td>
    <td>名カナ<%= f.text_field :first_name_kana, autcofocus: true %></td>
  </tr>
  <tr>
    <td>郵便番号</td>
    <td><%= f.text_field :postal_code, autofocus: true %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= f.text_field :address, autofocus: true %></td>
  </tr>
  <tr>
    <td>電話番号</td>
    <td><%= f.text_field :telephone_number, autofocus: true %></td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td><%= f.text_field :email, autofocus: true %></td>
  </tr>
  <tr>
    <td>会員ステータス</td>
    <td><%= f.radio_button :is_active, "true" %><%= f.label :is_active_true, "有効" %></td>
    <td><%= f.radio_button :is_active, "false" %><%= f.label :is_active_false, "退会" %></td>
  </tr>
</table>
<%= f.submit '変更を保存', class:"btn btn-secondary" %>
<% end %>
</div>