<h3>商品新規登録</h3>
<%= form_with model: @item, url: admins_item_path, method: :post do |f| %>
<table>
  <tr>
    <td>商品名</td>
    <td><%= f.text.field :name %></td>
  </tr>
  <tr>
    <td>商品説明</td>
    <td><%= f.text_area :introduction %></td>
  </tr>
  <tr>
    <td>税抜価格</td>
    <td><%= f.text_field :price %></td>
  </tr>
  <tr>
    <td>販売ステータス</td>
    <td><%= f.check_box '販売中' %></td>
    <td><%= f.check_box '販売停止中' %></td>
  </tr>
</table>
<%= f.submit '新規登録' %>
<% end %>