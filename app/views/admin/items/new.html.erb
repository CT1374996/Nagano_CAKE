<div class="container">
<h3>商品新規登録</h3>
<%= form_with model: @item, url: admin_items_path do |f| %>
<table class="table">
  <tr>
    <td>商品名</td>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <td>商品説明</td>
    <td><%= f.text_area :introduction %></td>
  </tr>
  <tr>
    <td>税抜価格</td>
    <td><%= f.text_field :price %></td>
  </tr>
</table>
<%= f.submit '新規登録', class:"btn btn-secondary" %>
<% end %>
</div>