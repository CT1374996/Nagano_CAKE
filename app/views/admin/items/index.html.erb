<h3>商品一覧</h3>
<table>
  <tr>
    <th>商品ID</th>
    <th>商品名</th>
    <th>税抜き価格</th>
  </tr>
  <% @items.each do |item| %>
  <tr>
    <td><%= item.id %></td>
    <td><%= link_to admin_item_path(item.id) do %> <%= item.name %> <% end %></td>
    <td><%= item.price %></td>
  <% end %>
  </tr>
</table>

