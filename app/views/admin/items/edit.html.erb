<h3>商品編集</h3>

<%= form_with model: @item do |f| %>
<table>
<tr>
    <td>商品名</td>
    <td><%= f.text.field :name %></td>
  </tr>
  <tr>
    <td>商品説明</td>
    <td><%= f.text_area :introduction %></td>
  </tr>
  <tr>
    <td>税抜価格</td>
    <td><%= f.text_field :price %></td>
  </tr>
</table>
<%= f.submit '新規登録' %>
<% end %>