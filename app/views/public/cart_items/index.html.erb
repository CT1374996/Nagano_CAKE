<h3>ショッピングカート</h3>

<table>
  <tr>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
  </tr>
  <% @cart_items.each do |cart_item| %>
  <tr>
    <td><%= cart_item.item.name %></td>
    <td><%= cart_item.item.with_tax_price %></td>
    <td><%= cart_item.select :amount, *[1..10] %></td>
    <td><%= cart_item.subtotal %></td>
  </tr>
  <tr>
    <td></td>
  </tr>
  <% end %>
</table>