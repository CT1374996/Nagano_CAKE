<h3>注文履歴詳細</h3>

<h4>注文情報</h4>
<table>
  <tr>
    <td>注文日</td>
    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
  </tr>
  <tr>
    <td>配送先</td>
    <td>〒<%= @order.receiver_postal_code %><br><%= @order.receiver_address %><br><%= @order.receiver_name %></td>
  </tr>
  <tr>
    <td>支払方法</td>
    <td><%= @order.payment_method %></td>
  </tr>
</table>

<h4>請求情報</h4>
<table>
  <tr>
    <td>商品合計</td>
    <td><%= @order.monetary_amount - @order.shipping_fee %></td>
  </tr>
  <tr>
    <td>送料</td>
    <td><%= @order.shipping_fee %></td>
  </tr>
  <tr>
    <td>ご請求額</td>
    <td><%= @order.monetary_amount %></td>
  </tr>
</table>

<h4>注文内容</h4>
<table>
  <tr>
    <th>商品</th>
    <th>単価(税込)</th>
    <th>個数</th>
    <th>小計</th>
  </tr>
  <% @order.order_details.each do |order_detail| %>
  <tr>
    <td><%= order_detail.item.name %></td>
    <td><%= order_detail.tax_included_price %></td>
    <td><%= order_detail.amount %></td>
    <td><%= order_detail.tax_included_price.to_i * order_detail.amount.to_i %></td>
  </tr>
  <% end %>
</table>