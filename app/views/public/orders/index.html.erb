  <tr>
    <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
    <td></td>
    <td></td>
    <td><%= order.monetary_amount %></td>
    <td><%= link_to "表示する", order_path(order.id) %></td>
  </tr>
  <% end %>
</table>