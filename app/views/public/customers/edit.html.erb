<h3>マイページ編集</h3>
<%= form_with model: @customer, url: customers_information_update_path, method: :patch do |f| %>
<table>
  <tr>
    <td>氏名</td>
    <td>姓<%= f.text_field :last_name, autofocus: true %></td>
    <td>名<%= f.text_field :first_name, autofocus: true %></td>
  </tr>
  <tr>
    <td>カナ</td>
    <td>姓カナ<%= f.text_field :last_name_kana, autofocus: true %></td>
    <td>名カナ<%= f.text_field :first_name_kana, autcofocus: true %></td>
  </tr>
  <tr>
    <td>郵便番号</td>
    <td><%= f.text_field :postal_code, autofocus: true %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= f.text_field :address, autofocus: true %></td>
  </tr>
  <tr>
    <td>電話番号</td>
    <td><%= f.text_field :telephone_number, autofocus: true %></td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td><%= f.text_field :email, autofocus: true %></td>
  </tr>
</table>
<%= f.submit '編集内容を保存' %>
  <% end %>

<div><%= link_to "退会する", customers_confirm_path %></div>