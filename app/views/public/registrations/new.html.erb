<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    姓<%= f.text_field :last_name, autocomplete: "(姓)" %>
  </div>

  <div class="field">
    名<%= f.text_field :first_name, autocomplete: "(名)" %>
  </div>

  <div class="field">
    姓カナ<%= f.text_field :last_name_kana, autocomplete: "(セイ)" %>
  </div>

  <div class="field">
    名カナ<%= f.text_field :first_name_kana, autocomplete: "(メイ)" %>
  </div>

  <div class="field">
    メールアドレス<br><%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" %>
  </div>

  <div class="field">
    郵便番号<br><%= f.text_field :postal_code, autocomplete: "郵便番号(ハイフンなし)" %>
  </div>

  <div class="field">
    住所<br><%= f.text_field :address, autocomplete: "住所" %>
  </div>

  <div class="field">
    電話番号<br><%= f.text_field :telephone_number, autocomplete: "電話番号(ハイフンなし)" %>
  </div>

  <div class="field">
    パスワード
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "パスワード(6文字以上)" %>
  </div>

  <div class="field">
    パスワード(確認用)<br />
    <%= f.password_field :password_confirmation, autocomplete: "パスワード(確認用)" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
